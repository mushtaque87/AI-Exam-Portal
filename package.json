{
  "name": "exam-portal",
  "version": "1.0.0",
  "description": "A comprehensive exam portal with admin and student panels",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "setup": "node setup.js",
    "heroku-postbuild": "npm run install-client && npm run build",
    "railway:build": "cd client && npm ci && npm run build",
    "railway:start": "node server.js",
    "perf": "npx artillery run perf/artillery.yml",
    "test:user-deletion": "node test-user-deletion.js"
  },
  "keywords": [
    "exam",
    "portal",
    "mcq",
    "education"
  ],
  "author": "Exam Portal Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.0",
    "sequelize": "^6.32.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
